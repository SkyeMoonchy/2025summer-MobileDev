page {
  background: #f6f6f6;
}
.container {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.video {
  width: 100%;
  height: 420rpx;
  background: #000;
  border-radius: 12rpx;
}
.danmuArea {
  display: flex;
  gap: 12rpx;
}
.danmuInput {
  flex: 1;
  background: #f5f7fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
}
.danmuBtn {
  background: #987938;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
}
.videoList {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
}
.videoBar {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.videoBar:last-child {
  border-bottom: none;
}
.playIcon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.meta .title {
  font-size: 30rpx;
  color: #222;
}